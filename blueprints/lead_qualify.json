    "Rating": {"type": "Picklist", "required": false, "enum": ["Hot", "Warm", "Cold"]},
    "IsConverted": {"type": "Boolean", "required": false}
  },
  "guardrails": {
    "fls": {"fields": ["Status", "Rating", "IsConverted"], "requireUpdateable": true},
    "sharing": "WITH_SHARING"
  }
}
